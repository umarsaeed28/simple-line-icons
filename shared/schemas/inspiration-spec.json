{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Inspiration Specification",
  "description": "Design inspiration specification generated by Designer Agent",
  "type": "object",
  "required": ["id", "style_tags", "palette", "forms", "motifs", "moodboard_url", "created_at"],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the inspiration spec"
    },
    "style_tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Array of style descriptors (e.g., 'modern', 'scandinavian', 'industrial')",
      "minItems": 1,
      "maxItems": 10
    },
    "palette": {
      "type": "object",
      "required": ["primary", "secondary", "accent", "neutral"],
      "properties": {
        "primary": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^#[0-9A-Fa-f]{6}$"
          },
          "description": "Primary color palette (hex codes)",
          "minItems": 1,
          "maxItems": 5
        },
        "secondary": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^#[0-9A-Fa-f]{6}$"
          },
          "description": "Secondary color palette (hex codes)",
          "minItems": 1,
          "maxItems": 5
        },
        "accent": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^#[0-9A-Fa-f]{6}$"
          },
          "description": "Accent color palette (hex codes)",
          "minItems": 1,
          "maxItems": 3
        },
        "neutral": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^#[0-9A-Fa-f]{6}$"
          },
          "description": "Neutral color palette (hex codes)",
          "minItems": 1,
          "maxItems": 5
        }
      }
    },
    "forms": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Form descriptors (e.g., 'geometric', 'organic', 'linear')",
      "minItems": 1,
      "maxItems": 5
    },
    "motifs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Pattern and motif descriptors (e.g., 'floral', 'geometric', 'textured')",
      "minItems": 0,
      "maxItems": 5
    },
    "moodboard_url": {
      "type": "string",
      "format": "uri",
      "description": "URL to the generated moodboard image"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the inspiration spec was created"
    },
    "trend_sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "source": {
            "type": "string",
            "enum": ["instagram", "pinterest", "rss", "trending"]
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        }
      },
      "description": "Sources that influenced this inspiration spec"
    }
  }
}