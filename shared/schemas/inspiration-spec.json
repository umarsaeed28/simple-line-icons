{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Inspiration Specification",
  "description": "Style specification generated by Designer Agent from trend analysis",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for this inspiration spec"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for this style"
    },
    "style_tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Style keywords like 'modern', 'bohemian', 'scandinavian'",
      "minItems": 1
    },
    "palette": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^#[0-9A-Fa-f]{6}$"
      },
      "description": "Hex color codes for the color palette",
      "minItems": 3,
      "maxItems": 8
    },
    "forms": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["geometric", "organic", "curved", "angular", "rounded", "linear"]
      },
      "description": "Preferred shape language and forms"
    },
    "motifs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Design motifs and patterns like 'geometric patterns', 'botanical prints'"
    },
    "materials": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["wood", "metal", "fabric", "leather", "glass", "ceramic", "stone", "plastic", "rattan", "marble"]
      },
      "description": "Preferred materials"
    },
    "mood": {
      "type": "string",
      "enum": ["cozy", "energetic", "calm", "luxurious", "minimalist", "eclectic", "warm", "cool"],
      "description": "Overall mood of the design"
    },
    "moodboard_url": {
      "type": "string",
      "format": "uri",
      "description": "URL to generated moodboard image"
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["instagram", "pinterest", "rss", "trend_report"]
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        },
        "required": ["type", "url"]
      },
      "description": "Source feeds and inspiration references"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "version": {
      "type": "string",
      "default": "1.0"
    }
  },
  "required": ["id", "name", "style_tags", "palette", "forms", "mood", "created_at"],
  "additionalProperties": false
}