# Room-in-a-Box Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# AI & OPENAI CONFIGURATION
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/room_in_a_box

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# MESSAGING CONFIGURATION
# =============================================================================
RABBITMQ_URL=amqp://admin:password@localhost:5672

# =============================================================================
# AMAZON PRODUCT ADVERTISING API
# =============================================================================
AMAZON_ACCESS_KEY=your_amazon_access_key_here
AMAZON_SECRET_KEY=your_amazon_secret_key_here
AMAZON_PARTNER_TAG=your_amazon_partner_tag_here
AMAZON_MARKETPLACE=US

# =============================================================================
# AUTHENTICATION
# =============================================================================
AUTH0_DOMAIN=your_auth0_domain.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id_here
AUTH0_CLIENT_SECRET=your_auth0_client_secret_here
AUTH0_AUDIENCE=your_auth0_audience_here

# =============================================================================
# PARTNER CONNECTOR API KEYS
# =============================================================================
WAYFAIR_API_KEY=your_wayfair_api_key_here
HOMEDEPOT_API_KEY=your_homedepot_api_key_here
TARGET_API_KEY=your_target_api_key_here

# =============================================================================
# AFFILIATE NETWORK CONFIGURATION
# =============================================================================
CJ_PUBLISHER_ID=your_cj_publisher_id_here
SKIMLINKS_API_KEY=your_skimlinks_api_key_here

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
S3_BUCKET_NAME=your_s3_bucket_name_here
S3_ACCESS_KEY_ID=your_s3_access_key_id_here
S3_SECRET_ACCESS_KEY=your_s3_secret_access_key_here
S3_REGION=us-east-1

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=info
NODE_ENV=development

# =============================================================================
# SERVICE PORTS
# =============================================================================
DESIGNER_AGENT_PORT=3001
DATA_AGENT_PORT=3002
USER_AGENT_PORT=3003
ADMIN_PORT=3000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
ENABLE_DEBUG_MODE=false
ENABLE_MOCK_DATA=true
ENABLE_HEALTH_CHECKS=true

# =============================================================================
# SECURITY
# =============================================================================
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600

# =============================================================================
# EXTERNAL SERVICE URLS
# =============================================================================
DESIGNER_AGENT_URL=http://localhost:3001
DATA_AGENT_URL=http://localhost:3002
USER_AGENT_URL=http://localhost:3003